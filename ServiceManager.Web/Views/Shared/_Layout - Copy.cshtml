<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ServiceManager.Web</title>

    <link href="~/lib/bulma/css/bulma.min.css" rel="stylesheet" />

    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        .nav-wrapper {
            background-color: #850000 !important;
            font-size: 14px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <header>
        <div class="navbar-fixed">
            <nav class="navbar" role="navigation" aria-label="main navigation">
                <div class="navbar-brand">
                    <a class="navbar-item" href="https://bulma.io">
                        <img src="https://bulma.io/images/bulma-logo.png" alt="Bulma: Free, open source, and modern CSS framework based on Flexbox" width="112" height="28">
                    </a>

                    <a role="button" class="navbar-burger" data-target="navMenu" aria-label="menu" aria-expanded="false">
                        <span aria-hidden="true"></span>
                        <span aria-hidden="true"></span>
                        <span aria-hidden="true"></span>
                    </a>

                </div>

                <div id="navMenu" class="navbar-menu">
                    <div class="navbar-start">
                        <a asp-controller="Service" asp-action="Index" class="navbar-item">
                            Services
                        </a>

                        <a asp-controller="Project" asp-action="Index" class="navbar-item">
                            Projects
                        </a>

                        <div class="navbar-item has-dropdown is-hoverable">
                            <a class="navbar-link">
                                Account Management
                            </a>

                            <div class="navbar-dropdown">
                                <a asp-controller="Account" asp-action="Index" class="navbar-item">
                                    Users
                                </a>
                                <a asp-controller="Role" asp-action="Index" class="navbar-item">
                                    Roles
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="navbar-end">
                        <div class="navbar-item">
                            <div class="buttons">
                                <a asp-controller="Account" asp-action="Register" class="button is-link">
                                    <strong>Sign up</strong>
                                </a>
                                <a asp-controller="Account" asp-action="LogIn" class="button is-light">
                                    Log in
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

            </nav>
        </div>
    </header>
    <div class="container">
        @*@Html.AntiForgeryToken()*@
        <div class="row">
            @RenderBody()
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - ServiceManager.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/fontawesome/font-awesome.js"></script>
    <script>
        $(document).ready(function () {

            // Check for click events on the navbar burger icon
            $(".navbar-burger").click(function () {

                // Toggle the "is-active" class on both the "navbar-burger" and the "navbar-menu"
                $(".navbar-burger").toggleClass("is-active");
                $(".navbar-menu").toggleClass("is-active");

            });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
