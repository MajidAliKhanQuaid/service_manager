@model IEnumerable<SystemService>

<div class="columns">
    <div class="column">
        <a class="btn" asp-action="Create">New Service</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Service</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@(service.Name)</td>
                <td>
                    @{
                        var serviceStatus = EnumHelper<ServiceStatus>.GetDisplayValue(service.ServiceStatus);
                    }
                    @switch (service.ServiceStatus)
                    {
                        case ServiceStatus.StartPending:
                        case ServiceStatus.Running:
                            <text>
                                <span class="badge green">
                                    @(serviceStatus)
                                </span>
                            </text>
                            break;
                        case ServiceStatus.StopPending:
                        case ServiceStatus.Stopped:
                            <text>
                                <span class="badge red">
                                    @(serviceStatus)
                                </span>
                            </text>
                            break;
                        default:
                            <text>
                                <span class="badge yellow">
                                    @(serviceStatus)
                                </span>
                            </text>
                            break;
                    }

                </td>
                <td>
                    <button class="btn btn-start-service" service-id="@service.Id"><i class="far fa-play-circle"></i></button>
                    <button class="btn btn-stop-service" service-id="@service.Id"><i class="far fa-stop-circle"></i></button>
                    <a class="btn" asp-action="Edit" asp-route-id="@service.Id"><i class="fas fa-edit"></i></a>
                    <a class="btn" asp-action="Delete" asp-route-id="@service.Id"><i class="far fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script>
    $(document).ready(function () {
        $(".btn-start-service").click(function (e) {
                            var serviceId = e.currentTarget.getAttribute("service-id");
                            console.log("Btn Start Service - Request", serviceId);
                            console.log("This is this ", this);
                            console.log("This is event ", e);
                            if (serviceId) {
                                console.log("Btn Start Service - Service Id is Valid Sending Ajax Request", serviceId);
                $.ajax({
                                    url: '@Url.Action("Start","Service")',
                    method: 'POST',
                    dataType: 'json',
                    contentType: 'application/json',
                    data: JSON.stringify({ ServiceId: serviceId }),
                    success: function (_response) {
                                        console.log("*** Start Service ***");
                                        console.log("Got Success Response ", _response);
                                    },
                    error: function (_error) {
                                        console.log("*** Start Service ***");
                                        console.log("Got Error Response", _error);
                                    }
                                });
            }
        });
        $(".btn-stop-service").click(function (e) {
            var serviceId = e.currentTarget.getAttribute("service-id");
            console.log("Btn Stop Service - Request", serviceId);
            if (serviceId) {
                console.log("Btn Stop Service - Service Id is Valid Sending Ajax Request", serviceId);
                console.log("This is this ", this);
                console.log("This is event ", e);
                $.ajax({
                    url: '@Url.Action("Stop","Service")',
                    method: 'POST',
                    dataType: 'json',
                    contentType: 'application/json',
                    data: JSON.stringify({ ServiceId: serviceId }),
                    success: function (_response) {
                        console.log("*** Stop Service ***");
                        console.log("Got Success Response ", _response);
                    },
                    error: function (_error) {
                        console.log("*** Stop Service ***");
                        console.log("Got Error Response", _error);
                    }
                });
            }
        });
    });
    </script>
}
